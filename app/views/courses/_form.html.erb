  <%= bootstrap_form_for(@course) do |f| %>
    <%= f.error_summary %>
    <div class="form-inputs">
      <%= f.text_field :title, label: 'Titre:', placeholder:"Le titre du Cours" %>
      <%= f.rich_text_area :content, label: 'Contenu:', class: "customized-min-height", placeholder: "Le contenu du cours" %>
    </div>

    <div class="row my-2">
        <div class="col-5  col-md-3 col-lg-3">
          <div class="input-form">
            <span class="select">
            <%= f.select :material_id,
              @materials.map { |m| [m.title, m.id] },
              placeholder:"la matiere",
               hide_label: true %>

            </span>
          </div>
        </div>
        <div class="col-5 col-md-3 col-lg-3">
          <div class="input-form">
            <span class="select">
              <%= f.text_field :level, placeholder:" Niveau", hide_label: true %>
            </span>
          </div>
        </div>
    </div>

    <div class="form-actions">
      <%= f.submit "CrÃ©er le Cours",  class: "btn btn-primary" %>
    </div>
  <% end %>


