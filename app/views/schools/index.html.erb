<p id="notice"><%= notice %></p>
<div class="contianer">

<h1>Schools</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Sigle</th>
      <th>Role</th>
      <th>Contact</th>
      <th>School address</th>
      <th>City</th>
      <th>Code school</th>
      <th>Code secret</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.sigle %></td>
        <td><%= school.role %></td>
        <td><%= school.contact %></td>
        <td><%= school.school_address %></td>
        <td><%= school.city %></td>
        <td><%= school.code_school %></td>
        <td><%= school.code_secret %></td>
        <td><%= school.user_id %></td>
        <td><%= link_to 'Show', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New School', new_school_path %>

</div>
