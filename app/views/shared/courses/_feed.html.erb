<div class="mt-2"></div>
<div class="card pt-2">
  <!-- title/!-->
	<p class="font-sans text-xl font-black container ">
	  <%= link_to course do %>
	    <%= course.title %>
	  <% end %>
	</p>

  <!--avatar users/!-->
	    <div class=" container">
				<%= link_to edit_user_registration_path do %>
					<div class="flex items-center mb-4 mt-2">
