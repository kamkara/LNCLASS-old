<p id="notice"><%= notice %></p>

<h1>Exercices</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content fiche</th>
      <th>Content correct</th>
      <th>Level</th>
      <th>Material</th>
      <th>Author</th>
      <th>Slug</th>
      <th>Course</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercices.each do |exercice| %>
      <tr>
        <td><%= exercice.title %></td>
        <td><%= exercice.content_exercice %></td>
        <td><%= exercice.author %></td>
        <td><%= exercice.slug %></td>
        <td><%= exercice.course_id %></td>
        <td><%= exercice.user_id %></td>
        <td><%= link_to 'Show', exercice %></td>
        <td><%= link_to 'Edit', edit_exercice_path(exercice) %></td>
        <td><%= link_to 'Destroy', exercice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

